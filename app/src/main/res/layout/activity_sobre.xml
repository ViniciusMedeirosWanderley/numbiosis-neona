<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SobreActivity">

    <ImageView
        android:id="@+id/background_sobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgroundapp" />

    <CheckedTextView
        android:id="@+id/Texto"
        android:layout_width="wrap_content"
        android:layout_height="221dp"
        android:autoLink="web"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:paddingRight="10dp"
        android:text="@string/textSobre"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textColorLink="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_sobre" />

    <Button
        android:id="@+id/numbiosis_button"
        android:layout_width="207dp"
        android:layout_height="91dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/numbiosis"
        app:layout_constraintStart_toStartOf="@+id/background_sobre"
        app:layout_constraintTop_toBottomOf="@+id/Texto" />

    <CheckedTextView
        android:id="@+id/Texto2"
        android:layout_width="365dp"
        android:layout_height="74dp"
        android:layout_marginTop="16dp"
        android:text="@string/textSobre2"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numbiosis_button" />

    <Button
        android:id="@+id/numis_button"
        android:layout_width="207dp"
        android:layout_height="127dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/numis2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Texto2" />

</android.support.constraint.ConstraintLayout>